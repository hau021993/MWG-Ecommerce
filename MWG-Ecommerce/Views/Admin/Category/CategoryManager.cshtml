@model IEnumerable<MWG_Ecommerce.Models.Category>

@{
    ViewData["Title"] = "CategoryManager";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="text-align:center">Quản lí loại sản phẩm</h1>

<p>
    <a onclick="generalShowInPopup('@Url.Action("AddOrEditCategory","CategoryManager",null,Context.Request.Scheme)','Thêm loại sản phẩm')" class="btn btn-success btn btn-success text-white"> <i class="fas fa-random"></i> Thêm loại sản phẩm</a>
</p>

<!-- TABLE VIEW -->
<div class="table-responsive rounded-top rounded-bottom">
    <table style="text-align:center" class="table table-bordered" id="myTable">
        <thead>
            <tr class="table-warning">
                <th style=" width:10%" scope="col">
                   Mã số
                </th>
                <th style=" width:15%" scope="col">
                    Tên loại sản phẩm 
                </th>          
                <th style=" width:15%" scope="col">
                    Mô tả 
                </th>    
                <th class="align-middle" style=" width:15%;" scope="col">Hoạt động</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>  
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>  
                <td class="align-middle text-center">
                    <button type="button" class="btn btn-info text-white" 
                            onclick="showInPopup('@Url.Action("AddOrEditCategory","CategoryManager",new { id= item.CategoryId },Context.Request.Scheme)','Sửa thông tin')">
                        <i class="fas fa-pencil-alt"></i>
                    </button>
                    <form asp-action="Delete" asp-route-id="@item.CategoryId" onsubmit="return ajaxDelete(this);" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i style="color:black;" class="far fa-trash-alt"></i>
                    </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
